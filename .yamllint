---
extends: default

rules:
  line-length:
    max: 120
    level: warning

  braces:
    max-spaces-inside: 1
    level: error

  brackets:
    max-spaces-inside: 1
    level: error

  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']
    check-keys: true

ignore: |
  .cache/
  .ansible/
